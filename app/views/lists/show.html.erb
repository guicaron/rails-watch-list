<h1>List Details</h1>

<h5> Category: <%= @list.name %> </h5>
<h5> Bookmark: </h5>

<ul>
<% @list.bookmarks.each do |book| %>
 <li> <%= book.comment %>
      <%= link_to "Delete",
    bookmark_path(book),
    data: {turbo_method: :delete, turbo_confirm: 't sur balourd ?'}
  %></li>
<% end %>
</ul>
<p><%= link_to "Back to lists", lists_path %></p>
<p><%= link_to "Add a bookmark", new_list_bookmark_path(@list.id) %></p>
